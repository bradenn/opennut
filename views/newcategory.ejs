<%- include("partials/header") %>
<%- include("partials/nav") %>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card-title">
                New Category
            </div>
            <div class="card-subtitle">
                Create a new category
            </div>
            <div class="card p-3">
                <% if(typeof error != 'undefined'){ %>
                    <span class="alert alert-danger">
                     <strong>Error: <%= (error) ? error : "Unknown Error" %></strong>
                 </span>
                <% } %>
                <form action="/new/category" method="post">
                    <div class="form-group">
                        <label for="entryTitle">Category Name</label>
                        <input type="text" class="form-control" id="title" name="title" aria-describedby="entryTitle">
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted"></span>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">

        </div>
    </div>
</div>


<%- include("partials/footer") %>