<%- include("partials/header") %>
<%- include("partials/nav") %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1><span class="mr-2" style="width: 1em;">ยง</span><%= target.name %></h1>
            <div class="" style="border-left: 2px solid #000; margin-left: 0.5em;">
                <% subtopics.forEach((subtopic) => { %>
                    <div class="ml-3">
                        <h4 class="ml-2"><a href="/subtopic/<%= subtopic.name %>"><%= subtopic.name %></a></h4>
                        <div class="pl-2" style="border-left: 2px solid #000; margin-left: 0.5em;">
                            <% texts.filter((text) => (text.subtopic.toString() == subtopic._id.toString())).forEach(text => { %>
                                <p class="ml-2"><a href="/text/<%= text._id %>"><%= text.title %></a></p>
                            <% }); %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer") %>